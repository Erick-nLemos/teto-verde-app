<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBack"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTetoVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="arial"
        android:text="Teto Verde"
        android:textColor="@color/design_default_color_background"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtHort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgComecar"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/txtHort"
        android:layout_width="243dp"
        android:layout_height="111dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Hortaliças Frescas para o seu Estabelecimento\n\n Faça o seu pedido e se torne um cliente vitalício "
        android:textAlignment="center"
        android:textColor="@color/design_default_color_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnComecar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTetoVerde" />

    <Button
        android:id="@+id/btnComecar"
        android:layout_width="320dp"
        android:layout_height="66dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/buttons"
        android:elevation="20dp"
        android:onClick="clickComecar"
        android:text="Começar"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgComecar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comecar_teto_verde" />

</androidx.constraintlayout.widget.ConstraintLayout>